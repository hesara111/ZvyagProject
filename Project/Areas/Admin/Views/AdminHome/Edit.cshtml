@model Project.SQLDataAccess.Entities.Account

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>User</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">


            <div class="form-group">
                @Html.LabelFor(model => model.PermissionID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.PermissionID, ViewBag.Permissions as List<SelectListItem>)
                    @Html.ValidationMessageFor(model => model.PermissionID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
        

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
        <div class="col-md-10">
            @Html.HiddenFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
        <div class="col-md-10">
            @Html.HiddenFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="col-md-10">
            @Html.HiddenFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="col-md-10">
            @Html.HiddenFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.HiddenFor(model => model.IsVerified)
            </div>
    </div>
}