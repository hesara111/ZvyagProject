@model IEnumerable<Project.SQLDataAccess.Entities.Objective>

@{
    ViewBag.Title = "Index";
}
<style>
    a.my-class {
        color: #000000
    }

        a.my-class:active {
            color: #000000
        }

        a.my-class:link {
            color: #999999
        }

        a.my-class:visited {
            color: #CCCCCC
        }
</style>
<h2>Ваши таски</h2>

<p>
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal">@Html.ActionLink("Добавить", "Create",null, new { @class = "my-class" })</button>   
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Название таска")
        </th>
        <th>
            @Html.DisplayName("Комментарий")
        </th>
        <th>
            @Html.DisplayName("Статус")
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StatusID)
        </td>
        
        <td>
            <button type="button" id="id=" WhiteColor"" class="btn btn-primary "> @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }, new { @class = "my-class" }) </button>
                <button type="button" id="WhiteColor" class="btn btn-danger">@Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { @class = "my-class" }) </button>
        </td>
    </tr>
}

</table>
